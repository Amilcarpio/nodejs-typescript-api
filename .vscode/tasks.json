{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build TS",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": ["$tsc"],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "npm test",
      "group": "test",
      "presentation": { "reveal": "always", "panel": "new" }
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "npm run lint",
      "group": "test"
    }
  ]
}
